   "source": [
    "import sys\n",
    "sys.path.append(\"../src\")\n",
    "\n",
    "from attribute_reasoner import apply_attribute_reasoner\n",
    "from taste_reasoner import encode_items, add_taste_scores\n",
    "from smart_buy import add_smart_buy_index\n",
    "from ranking import naive_rank, bias_aware_rank\n",
    "\n",
    "import pandas as pd\n",
    "\n",
    "# 1) Load data\n",
    "items = pd.read_csv(\"../data/sample_items.csv\")\n",
    "\n",
    "# 2) Apply Attribute Reasoner (adds color/category/style/condition_norm)\n",
    "items_attr = apply_attribute_reasoner(items)\n",
    "items_attr.head()\n",
    "\n",
    "# 3) Encode items into embeddings\n",
    "model, item_embeddings, corpus_text = encode_items(items_attr)\n",
    "\n",
    "# 4) Simulate a user: which items did they \"like\"?\n",
    "liked_ids = [1, 4]  # you can change this later\n",
    "\n",
    "# 5) Add taste_score for each item\n",
    "items_with_taste, user_taste_vec = add_taste_scores(\n",
    "    items_attr,\n",
    "    item_embeddings,\n",
    "    liked_ids,\n",
    ")\n",
    "\n",
    "items_with_taste[[\"item_id\", \"title\", \"taste_score\"]]\n",
    "\n",
    "# 6) Smart Buy Index\n",
    "# items_with_taste is from the Taste Reasoner step\n",
    "items_with_sb = add_smart_buy_index(items_with_taste)\n",
    "\n",
    "items_with_sb[[\n",
    "    \"item_id\",\n",
    "    \"title\",\n",
    "    \"discount_ratio\",\n",
    "    \"brand_score\",\n",
    "    \"material_score\",\n",
    "    \"condition_score\",\n",
    "    \"smart_buy_index\",\n",
    "]\n"
    "\n",
    "# 7) Ranking examples\n",
    "query = \"black boots size 8\"\n",
    "\n",
    "naive = naive_rank(\n",
    "    df=items_with_sb,\n",
    "    item_embeddings=item_embeddings,\n",
    "    model=model,\n",
    "    query=query,\n",
    "    top_k=10,\n",
    ")\n",
    "\n",
    "smart = bias_aware_rank(\n",
    "    df=items_with_sb,\n",
    "    item_embeddings=item_embeddings,\n",
    "    model=model,\n",
    "    query=query,\n",
    "    alpha=0.4,\n",
    "    beta=0.3,\n",
    "    gamma=0.3,\n",
    "    top_k=10,\n",
    ")\n"
   ]
  }
 ],
